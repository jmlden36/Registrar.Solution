@{
  Layout = "_Layout";
}

@model Registrar.Models.Student

<h2>Edit</h2>

<h4>Edit this student: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.Label("Select course")
    @Html.DropDownList("CourseId")

    @Html.Label("Select department")
    @Html.DropDownList("DepartmentId")

    @Html.LabelFor(model => model.DateEnrolled, new {@type="date", required = "required" })
    @Html.TextBoxFor(model => model.DateEnrolled, new {@type="date", required = "required" })

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>