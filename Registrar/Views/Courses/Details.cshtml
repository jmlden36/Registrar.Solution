@{
  Layout = "_Layout";
}


@model Registrar.Models.Course

<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.CourseNum): @Html.DisplayFor(model => model.CourseNum)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This course does not contain any students</p>
}
else
{
  <h4>Students the Course contains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Student.Name</li>
  }
  </ul>
}

@if(@Model.JoinEntitiesC.Count == 0)
{
  <p>This course does not belong to a department</p>
}
else
{
  <h4>Departments the course belongs to:</h4>
  <ul>
  @foreach(var join in Model.JoinEntitiesC)
  {
    <li>@join.Department.DepartmentName</li>
  }
  </ul>
}

<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>